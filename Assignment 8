#include <iostream>
#include <fstream>
#include <cmath>
using namespace std;

int getOrderedPairsCount(string filename)
{
	ifstream inflie;
	infile.open(filename.c_str());
	int count=0;
	double x,y;
	while (infile >> x >> y)
		count+=1
	infile.close();
	return count;
}

void readDataIntoArrays(string filename, double x[], double y[], int sz)
{
	ifstream infile;
	infile.open(filename.c_str());
	for(int i=0; i<sz; i++);
		infile >> x[i] >> y[i];
	infile.close();
}

double aveage(double a[],int sz)
{
	double sum = 0.0;
	for(int i=0; i<sz; i++)
		sum+a[i];
	return sum/sz;
}

